# Configuration for environment variables
# Copy this file to .env and fill in your Azure credentials

# FastAPI Settings
DEBUG=True
APP_NAME="Interview Question Paper Generator"

# Azure Service Bus
AZURE_SERVICE_BUS_CONNECTION_STRING=your_service_bus_connection_string_here
SERVICE_BUS_QUEUE_NAME=paper-generation-queue

# Azure Cosmos DB
COSMOS_DB_CONNECTION_STRING=your_cosmos_db_connection_string_here
COSMOS_DB_DATABASE_NAME=interviewdb
COSMOS_DB_CONTAINER_NAME=users

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name_here
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key_here
BLOB_CONTAINER_NAME=questions

# AI Provider (openai or anthropic)
AI_PROVIDER=anthropic
AI_MODEL=claude-3-sonnet-20240229

# API Keys (use either OpenAI or Anthropic based on AI_PROVIDER)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF=2.0
